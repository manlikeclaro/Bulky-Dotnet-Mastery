@model Category

<div class="container">

    <input asp-for="Id" hidden>
    <form action="" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control " disabled>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control " disabled>
            </div>
            <div class="row">
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-danger rounded form-control">Delete</button>
                </div>
                <div class="col-6 col-md-4">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded form-control">
                        Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>