@model List<Category>

<div class="container">
    <div class="row pt-4 mb-4">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <!-- Link to create a new category -->
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <div class="text-center">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                @* <th>ID</th> *@
                <th>Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <!-- Loop through the list of categories and display each one in a table row -->
            @foreach (var obj in Model)
            {
                <tr>
                    @* <td>@obj.Id</td> *@
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <!-- Edit button -->
                        <span class="mx-1 btn btn-primary rounded">
                            <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id">
                                <i class="bi bi-pencil text-light"></i>
                            </a>
                        </span>
                        <!-- Delete button -->
                        <span class="mx-1 btn btn-danger rounded">
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id">
                                <i class="bi bi-trash3 text-light"></i>
                            </a>
                        </span>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>