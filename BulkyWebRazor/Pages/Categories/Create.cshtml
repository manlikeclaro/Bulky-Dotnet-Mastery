@page
@model BulkyWebRazor.Pages.Categories.Create

<div class="container">

    <form action="" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Category</h2>
            </div>
            <div class="mb-3">
                <label asp-for="Category.Name"></label>
                <input asp-for="Category.Name" class="form-control">
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category.DisplayOrder"></label>
                <input asp-for="Category.DisplayOrder" class="form-control">
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>
            @* <div class="mb-3"> *@
            @*     <span asp-validation-summary="ModelOnly" class="text-danger"></span> *@
            @* </div> *@
            <div class="row">
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-primary rounded form-control">Create</button>
                </div>
                <div class="col-6 col-md-4">
                    <a asp-page="/categories/index" class="btn btn-outline-secondary rounded form-control">
                        Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}