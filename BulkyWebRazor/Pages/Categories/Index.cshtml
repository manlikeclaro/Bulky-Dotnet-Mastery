@page
@model BulkyWebRazor.Pages.Categories.Index

<div class="container">
    <div class="row pt-4 mb-4">
        <partial name="Shared/_Notifications"></partial>

        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary rounded">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>


    <div class="text-center">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model.CategoriesList)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <span class="mx-1 btn btn-primary rounded">
                            <a asp-page="/categories/edit" asp-route-Id="@obj.Id">
                                <i class="bi bi-pencil text-light"></i>
                            </a>
                        </span>
                        <span class="mx-1 btn btn-danger rounded">
                            <a asp-page="/categories/delete" asp-route-Id="@obj.Id">
                                <i class="bi bi-trash3 text-light"></i>
                            </a>
                        </span>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>