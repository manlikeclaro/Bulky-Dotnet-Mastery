@page
@model BulkyWebRazor.Pages.Categories.Edit
@{
ViewData["Title"] = "Edit Category";
}

<div class="container">

    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
            </div>
            <input asp-for="CategoryFromDb.Id" hidden />
            <div class="mb-3">
                <label asp-for="CategoryFromDb.Name"></label>
                <input asp-for="CategoryFromDb.Name" class="form-control" />
                <span asp-validation-for="CategoryFromDb.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryFromDb.DisplayOrder"></label>
                <input asp-for="CategoryFromDb.DisplayOrder" class="form-control" />
                <span asp-validation-for="CategoryFromDb.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-primary rounded form-control">Update</button>
                </div>
                <div class="col-6 col-md-4">
                    <a asp-page="/Categories/Index" class="btn btn-outline-secondary rounded form-control">
                        Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}
