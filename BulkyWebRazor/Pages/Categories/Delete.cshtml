@page
@model BulkyWebRazor.Pages.Categories.Delete
@{
ViewData["Title"] = "Delete Category";
}

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
            </div>

            <input asp-for="CategoryFromDb.Id" type="hidden" />

            <div class="mb-3">
                <label asp-for="CategoryFromDb.Name"></label>
                <input asp-for="CategoryFromDb.Name" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="CategoryFromDb.DisplayOrder"></label>
                <input asp-for="CategoryFromDb.DisplayOrder" class="form-control" disabled />
            </div>

            <div class="row">
                <div class="col-6 col-md-4">
                    <button type="submit" class="btn btn-danger rounded form-control">Delete</button>
                </div>
                <div class="col-6 col-md-4">
                    <a asp-page="/categories/index" class="btn btn-outline-secondary rounded form-control">
                        Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
